#Chat
pod 'LayerKit'
pod 'Atlas'


#UIHelpers
pod 'Toucan'
pod 'PINRemoteImage'
pod 'Cartography'
pod 'Hue', :git => 'https://github.com/hyperoslo/Hue.git'
pod 'IQKeyboardManagerSwift'


#UIComponents
pod 'VideoSplashKit'
pod 'Charts'
pod 'Eureka'
